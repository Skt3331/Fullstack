<% layout("./layout/boilerplate.ejs") %>
<div class="row">
   <div class="col-8 offset-2">
        <h3>Create new Listing</h3>
        <form action="/listings" method="post">
            <div>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <br> <input type="text" name="listing[title]" placeholder="enter title" class="from-control">
            </div>

            
            <div class="mb-3" >
                <label for="description" class="form-label">Description</label>
                <br><textarea name="listing[description]" cols=" 30" rows="10" class="from-control"></textarea>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <br> <input type="text" name="listing[image]" placeholder="enter url" class="from-control"> 
            </div>

            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <br> <input type="number" name="listing[price]" placeholder="enter price" class="from-control" >
            </div>
           <div class="row">

            <div class="mb-3 col-4">
                <label for="price" class="form-label">Location</label>
                 <input type="text" name="listing[location]" placeholder="enter location" class="from-control">
            </div>
           
            <div class="mb-3 col-8">
                <label for="country" class="form-label">Country</label>
                <br> <input type="text" name="listing[country]" placeholder="enter country" class="from-control">
            </div>

           </div>
            
            

            <button class="btn btn-dark add-btn" type="submit">Add</button>

</div></div>

        </form>
  </div>

  